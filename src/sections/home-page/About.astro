---
import { Badge } from "@/components/ui/badge"
import type { LanguageData } from "@/types/language"

type Props = {
  t: LanguageData
}

const { t } = Astro.props
const currentLang = Astro.currentLocale
---

<section
  id="about"
  class="compact-section space-y-10 pt-0 sm:pt-5"
>
  <div class="container-width">
    <h2 class="section-initial-title">
      {t.about.title}
    </h2>

    <div
      class="text-muted-foreground space-y-3 text-sm sm:space-y-4 sm:text-base"
    >
      <p>{t.about.description1}</p>
      <p>{t.about.description2}</p>
    </div>
  </div>

  <div class="container-width">
    <div class="flex items-center justify-between">
      <h2 class="section-initial-title">
        {t.about.education.title}
      </h2>

      <a
        href={currentLang === "en" ? "/en/certificates" : "/certificates"}
        class="text-muted-foreground text-xs hover:underline sm:text-sm"
        >{t.certificatesPage.btnToRedirect}</a
      >
    </div>

    <div class="flex flex-col gap-4">
      {
        t.about.education.educations.map((item) => (
          <div class="flex items-center justify-between gap-4">
            <div class="flex items-center gap-4">
              <img
                src={item.logo}
                alt={`Logo ${item.academy}`}
                loading="lazy"
                class="size-10 rounded-full border"
              />

              <div>
                <h3 class="text-sm font-medium tracking-wider uppercase">
                  {item.academy}
                </h3>
                <p class="text-muted-foreground text-sm">{item.degree}</p>
              </div>
            </div>

            <span class="text-muted-foreground">{item.year}</span>
          </div>
        ))
      }
    </div>
  </div>

  <div class="container-width">
    <div class="mb-3">
      <h2 class="section-initial-title">
        {t.about.skillsAndTechnologies.title}
      </h2>
    </div>

    <div class="space-y-3">
      {
        t.about.skillsAndTechnologies.skills.map(({ label, skills }) => (
          <div class="space-y-1">
            <h3 class="text-sm font-medium tracking-wider uppercase">
              {label}
            </h3>
            <div class="flex flex-wrap gap-3">
              {skills.map((skill) => (
                <Badge>{skill}</Badge>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
