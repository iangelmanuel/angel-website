---
import Layout from "@/layouts/Layout.astro"
import Hero from "@/sections/certificates/Hero.astro"
import CertificatesGrid from "@/sections/certificates/CertificatesGrid.astro"

import { es } from "@/i18n/es"
import { en } from "@/i18n/en"
import type { Language } from "@/types/language"

const currentLang = Astro.currentLocale || "es"
const translations = { en, es }
const t = translations[currentLang as Language]
---

<Layout
  t={t}
  title={t.seo.certificatesPage.title}
  description={t.seo.certificatesPage.description}
>
  <Hero t={t} />
  <CertificatesGrid />
</Layout>
