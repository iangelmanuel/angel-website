---
import Layout from "@/layouts/Layout.astro"
import About from "@/sections/home-page/About.astro"
import Hero from "@/sections/home-page/Hero.astro"
import Projects from "@/sections/home-page/Projects.astro"
import Contact from "@/sections/home-page/Contact.astro"

import { es } from "@/i18n/es"
import { en } from "@/i18n/en"
import type { Language } from "@/types/language"

const currentLang = Astro.currentLocale || "es"
const translations = { en, es }
const t = translations[currentLang as Language]
---

<Layout
  t={t}
  title={t.seo.title}
  description={t.seo.description}
>
  <Hero t={t} />
  <About t={t} />
  <Projects t={t} />
  <Contact
    t={t}
    currentLang={currentLang}
  />
</Layout>
